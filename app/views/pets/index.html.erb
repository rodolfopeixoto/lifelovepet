 <div class="container-fluid">
   <div class="row">
    <div class="wrap">
      
      <div id="tinderslide">
        <ul>
          <%= render @pets %>  
        </ul>
      </div>

      <div class="actions">
       <a href="#" class="dislike"><i class="fa fa-times"></i></a>
       <a href="#" class="like"><i class="fa fa-heart"></i></a>
     </div>
     
   </div>
   
 </div>

</div>

 <script type="text/javascript">


$('.actions .like, .actions .dislike').click(function(e){

  e.preventDefault();
  $("#tinderslide").jTinder($(this).attr('class'));
});


  $("#tinderslide > ul li").tsort({attr:"id"});

  $("#tinderslide").jTinder({
    onDislike: function (item) {
      var myId = $("#tinderslide > ul li").last().attr("id");
      $("#pet_" + myId)[0].click();
    },
    onLike: function (item) {
      var myId = $("#tinderslide > ul li").last().attr("id");
      $("#pet_" + myId)[0].click();
    },
    animationRevertSpeed: 200,
    animationSpeed: 400,
    threshold: 1,
    likeSelector: '.like',
    dislikeSelector: '.dislike'
  });
</script>
