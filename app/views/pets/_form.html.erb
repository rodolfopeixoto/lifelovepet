 <div class="container-fluid"> 
  <h2>Pet</h2>
<%= form_for @pet, :html => {  :multipart => true} do |f| %>
  
  <div class="row">
    <div class="col-md-6">
       <%= f.label :picture, "Foto" %>
       <%= f.file_field :picture %>
    </div>
    <div class="col-md-6">
        <div class="form-group">
         <%= label_tag(:name) %>
         <%= f.text_field :name, :class => "form-control" %>
       </div>
    </div>
  </div>


  <div class="form-group">
   <%= f.label :size %> 
   <fieldset>
     <%= f.radio_button :size, "pequeno" %>
     <%= f.label :size_small, "Pequeno"  %>
     <%= f.radio_button :size, "Medio" %>
     <%= f.label :size_medium, "Médio" %>
     <%= f.radio_button :size, "grande" %>
     <%= f.label :size_big, "Grande" %>
    </fieldset>
  </div>


  <label>Idade</label>  
  <div class="form-group">
    <%= f.number_field :age, in: 0...15 %>
    <%= f.label :age, "ano(s)" %>

    <%= f.number_field :ageMonth, in: 1...12  %>
    <%= f.label :ageMonth, "mes(es)" %>
  </div>

  
   <div class="form-group">
   <%= f.label :animal, "Animal" %> 
    <fieldset>
      <%= f.label :animal_cat, "Gato" %>
      <%= f.radio_button :animal, "cat"  %>
      <%= f.label :animal_dog, "Cachorro" %>
      <%= f.radio_button :animal, "dog"  %>
    </fieldset>
  </div>

   <div class="form-group">
      <%= f.label :breed, "Raça" %>
      <%= f.text_field :breed, :class => "form-control"  %>
  </div>

  <div class="form-group">
    <%= f.label :bio, "Descrição" %>
    <%= f.text_area :bio, :class => "form-control" %>
  </div>

  <%= f.submit :class => "btn btn-custom form-control text-center"  %>

<% end %>

</div>