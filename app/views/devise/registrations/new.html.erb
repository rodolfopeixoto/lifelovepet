<div class="sign_up">
  <h2 class="text-center">Cadastro</h2>


<div class="row" style="border-bottom: 1px solid #D8ECCF;">
  <div class="wizard">
    <div class="wizard-inner">

      <div class="connecting-line"></div>
      <div class="connecting-line2"></div> 

      <ul class="nav nav-tabs text-center" role="tablist">

        <li role="presentation" class="active">
          <a href="#step1" data-toggle="tab" aria-controls="step1" role="tab" title="Step 1">
            <span class="round-tab">
              <i class="fa fa-user"></i>
            </span>
          </a>




        </li>

        <li role="presentation" class="disabled">

          <a href="#step2" data-toggle="tab" aria-controls="step2" role="tab" title="Step 2">
            <span class="round-tab">
             <i class="fa fa-user"></i>
           </span>
         </a>

       </li>


       <li role="presentation" class="disabled">
        <a href="#step3" data-toggle="tab" aria-controls="step3" role="tab" title="Step 3">
          <span class="round-tab">
            <i class="fa fa-user"></i>
          </span>
        </a>




      </li>

    </ul>
  </div>
</div>
</div>
<div class="row-fluid text-center" style="margin-top: 20px;">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="tab-content">
    <div class="tab-pane active" role="tabpanel" id="step1">
      <h4 class="text-left text_bold">Usuário</h4>

      <div class="form-group">
        <label>Email</label>
        <%= f.email_field :email, :class => "form-control"%>
      </div>

      <div class="form-group">
         <label>Data de Nascimento</label>
        <%= f.date_field :dateOfBirth, :class => "form-control" %>
      </div>

        
      <div class="form-group">
         <label>Nome</label>
        <%= f.text_field :firstName, :class => "form-control" %>
      </div>

      <div class="form-group">
         <label>Sobrenome</label>
        <%= f.text_field :lastName, :class => "form-control" %>
      </div>

      <button type="button" class="btn btn-custom form-control btn-lg next-step">Avançar</button>
    </div>

    <div class="tab-pane" role="tabpanel" id="step2"> 
    <h4 class="text-left text_bold">Usuário</h4>


      <div class="form-group">
         <label>Cidade</label>
        <%= f.text_field :city, :class => "form-control" %>
      </div>

      <div class="form-group">
         <label>Bairro(opcional)</label>
        <%= f.text_field :location, :class => "form-control" %>
      </div>

      <div class="form-group">
         <label>Estado</label> 
        <%= f.select :state, 
            options_for_select([['AC','AC'],['AL','AL'],['AP','AP'],['AM','AM'],['BA','BA'],['CE','CE'],['DF','DF'],['ES','ES'],
              ['GO','GO'],['MA','MA'],['MT','MT'],['MS','MS'],['MG','MG'],['PA','PA'],['PB','PB'],['PR','PR'],['PE','PE'],['PI','PI'],
              ['RJ','RJ'],['RN','RN'],['RS','RS'],['RO','RO'],['RR','RR'],['SC','SC'],['SP','SP'],['SE','SE'],['TO','TO']], :selected =>params[:state]),
            {}, { :class => "form-control" }
         %>
      </div>
 



    <button type="button" class="btn btn-custom btn-lg form-control next-step">Avançar</button>
  </div>
  <div class="tab-pane" role="tabpanel" id="step3">
  <h4 class="text-left text_bold">Usuário</h4>

    <div class="text-center">
      
      
     <div class="form-group">
         <label>Senha</label>
      <%= f.password_field :password, :class => "form-control" %>
    </div> 

    <div class="form-group">
         <label>Repita a senha</label>
      <%= f.password_field :password_confirmation, :class => "form-control" %>
    </div>

    </div>

    <div class="form-group"> 
      <%= f.submit "Cadastrar", :class => "btn btn-custom form-control text_bold" %>
    </div>

    




  </div> 
  <div class="clearfix"></div>
</div>

</div>

<%= render "devise/shared/links" %>
<% end %>