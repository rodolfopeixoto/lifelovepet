<section class="sign_in">
<%= render 'layouts/brand' %>

    <h2 class="text-center">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.email_field :email, placeholder: "seuemail@empresa.com", :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, placeholder: "Digite o seu email", :class => "form-control" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

        <%= f.submit "Log in", :class => "btn btn-custom form-control text_bold" %>
     
    <% end %>

      <%= render "devise/shared/links" %>
</section>